<form method="POST" action="/login">
    <div class="form-group">
            <input id="username" name="username" type="text" class="validate" class="form-control" required>
            <label for="username">Username</label>
    </div>
    <div class="form-group">
            <input id="password" name="password" type="password" class="validate" class="form-control" required>
            <label for="password">Password</label>
    </div>
            <button type="submit" class="btn btn-default">Login
            </button>
</form>
